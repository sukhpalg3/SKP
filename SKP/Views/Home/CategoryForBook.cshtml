@model IEnumerable<SKP.Models.Category>
@{
    ViewData["Title"] = "Home Page";
}

<div id="demo" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
        <li data-target="#demo" data-slide-to="3"></li>

    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/slides/1.jpg" alt="Slide 1" style="width:90%;height:400px">
            <div class="carousel-caption">
                <h3>Books</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slides/2.jpg" alt="Slide 2" style="width:90%;height:400px">
            <div class="carousel-caption">
                <h3>Notes</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slides/3.jpg" alt="Slide 3" style="width:90%;height:400px">
            <div class="carousel-caption">
                <h3>Videos</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slides/4.jpg" alt="Slide 3" style="width:90%;height:400px">
            <div class="carousel-caption">
                <h3>PPT</h3>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

<div class="text-center">
    <h1 class="display-4" style="margin-bottom:50px;">All Books Categories</h1>
</div>
<div class="card-columns">
    @foreach (var item in Model)
    {
        <div class="card bg-warning">
            <div class="card-body text-center">
                <p class="card-text">
                    <a class="font-weight-bolder" asp-action="ViewBooksByCategory" asp-route-id="@item.CategoryID">@item.CategoryName</a>
                </p>
            </div>
        </div>
    }
</div>

