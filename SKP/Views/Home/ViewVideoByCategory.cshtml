@model IEnumerable<SKP.Models.VideoLecDetail>

@{
    ViewData["Title"] = "View Video";
}

<center>
    <h1>View Video</h1>
</center>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="card">
                <center>
                    <img src="/w3images/team2.jpg" alt="" style="width:100%">
                </center>
                <h1> @Html.DisplayFor(modelItem => item.VidName)</h1>
                <p class="title"> Author : @Html.DisplayFor(modelItem => item.Author)</p>
                <p class="title"> @Html.DisplayFor(modelItem => item.VidDescription)</p>
                <p><a asp-action="DownloadVideo" asp-route-id="@item.VidID" class="a-button">Download</a></p>
            </div>
        </div>
    }
</div>

